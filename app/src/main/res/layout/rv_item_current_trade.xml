<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="НефтьГазМясо"/>

    <TextView
        android:id="@+id/tv_stock_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="3000.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_purchase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_150dp"/>

    <ImageView
        android:id="@+id/iv_purchase_to_current_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:src="@drawable/ic_equals"
        app:layout_constraintTop_toTopOf="@id/tv_stock_purchase_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_purchase_price"
        app:layout_constraintEnd_toStartOf="@id/gl_purchase"/>

    <TextView
        android:id="@+id/tv_stock_latest_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="@id/tv_stock_purchase_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_purchase_price"
        app:layout_constraintStart_toEndOf="@id/gl_purchase"
        tools:text="3001.4"/>

    <TextView
        android:id="@+id/tv_stock_purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="@id/tv_stock_purchase_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_purchase_price"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="30.12.2003"/>
</androidx.constraintlayout.widget.ConstraintLayout>