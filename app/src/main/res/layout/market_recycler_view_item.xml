<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/stock_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="@dimen/margin_large"
        android:src="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/stock_name"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/stock_icon"/>

    <ImageView
        android:id="@+id/previous_day_highest_price_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/ic_arrow_up"
        app:layout_constraintTop_toTopOf="@id/stock_name"
        app:layout_constraintStart_toEndOf="@id/stock_name"/>

    <ImageView
        android:id="@+id/previous_day_lowest_price_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/stock_name"
        app:layout_constraintStart_toEndOf="@id/stock_name"/>

    <TextView
        android:id="@+id/previous_day_lowest_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_day_lowest_price"
        android:textSize="@dimen/text_size_small"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="@id/stock_name"
        app:layout_constraintStart_toEndOf="@id/stock_name"/>

    <TextView
        android:id="@+id/previous_day_highest_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_day_highest_price"
        android:textSize="@dimen/text_size_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/stock_name"
        app:layout_constraintStart_toEndOf="@id/stock_name"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/previous_day_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="previous_day_highest_price, previous_day_lowest_price"
        app:barrierDirection="right"/>

    <ImageView
        android:id="@+id/buy_price_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/ic_buy"
        app:layout_constraintTop_toTopOf="@id/stock_name"
        app:layout_constraintEnd_toStartOf="@id/buy_price"/>

    <ImageView
        android:id="@+id/sell_price_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/ic_sell"
        app:layout_constraintBottom_toBottomOf="@id/stock_name"
        app:layout_constraintEnd_toStartOf="@id/sell_price"/>

    <TextView
        android:id="@+id/buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_price"
        android:textSize="@dimen/text_size_small"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@id/previous_day_barrier"
        app:layout_constraintTop_toTopOf="@id/previous_day_lowest_price"/>

    <TextView
        android:id="@+id/sell_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell_price"
        android:textSize="@dimen/text_size_small"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@id/previous_day_barrier"
        app:layout_constraintTop_toTopOf="@id/previous_day_highest_price"/>

    <TextView
        android:id="@+id/current_spread_and_commission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="128dp"
        android:text="@string/spread_and_commission"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toStartOf="@id/purchased_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_price"
        android:textSize="@dimen/text_size_large"
        android:layout_margin="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/purchased_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stock_owned_price"
        android:textSize="@dimen/text_size_large"
        android:layout_margin="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/current_price"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttons_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="stock_name"
        app:barrierDirection="bottom"/>

    <Button
        android:id="@+id/button_add_stock_to_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_stock"
        android:textAllCaps="false"
        android:layout_margin="@dimen/margin_large"
        app:layout_constraintTop_toTopOf="@id/buttons_barrier"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>